<h1> Modification of <%= @task.title %> </h1>

<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.check_box :completed %> Completed
  <%= f.submit %>
<% end %>

<%= link_to "Back to list", task_path %>